        <%= image_tag("article.jpg", :alt => "Articles") %>
      </div>
    </div>
  </div>
	<div class="col-sm-6">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">Users</h5>
        	<%= image_tag("user.png", :alt => "Users") %>
