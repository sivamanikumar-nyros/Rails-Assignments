</div>



class AuthorsController < ApplicationController
 def index
   @article = Article.all
   @articles = .where(name:"siva")
   
 end
 def show
   @category = Category.where("id = ?", params[:id])
   @articles_names_not = Article.where.not(name:"Teja")
   @articles_names_or = Article.where.not(name:"siva") .or Article.where.not(name:"Teja")
 end
 private
   def article_params
     params.require(:article).permit(:id, :nationality, :name)
   end
end