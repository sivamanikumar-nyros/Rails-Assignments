<%= form_for @user, local: true do |f|%>
  </div>
    <div class="form-group">
      <%= f.label :name%>
      <%= f.text_field :name ,{:class=>'form-control' } %>
    </div>
    
    <div class="form-group">
      <%= f.label :gender%>
      <%= f.text_field :gender,{:class=>'form-control' } %>
    </div>
    
    <div class="form-group">
      <%= f.label :enabled%>
      <%= f.text_field :enabled,{:class=>'form-control' } %>
    </div>
      <%= f.fields_for :addresses do |addr|%>
    
    <div class="address">
      
      <div class="form-group">
        <%= addr.label :user_id%>
        <%= addr.text_field :user_id,{:class=>'form-control' } %>
      </div>
      
      <div class="form-group">
        <%= addr.label :street%>
        <%= addr.text_field :street,{:class=>'form-control' } %>
      </div>
      
      <div class="form-group">
        <%= addr.label :city%>
        <%= addr.text_field :city,{:class=>'form-control' } %>
      </div>
      
      <div class="form-group">
        <%= addr.label :state%>
        <%= addr.text_field :state,{:class=>'form-control' } %>
      </div>
      
      <div class="form-group">
        <%= addr.label :doornumber%>
        <%= addr.text_field :doornumber,{:class=>'form-control' } %>
      </div>
    </div>
    <% end %>
      <div class="row">
        
        <div align="left" class="col-6">
          <%= link_to 'Back', users_path, {:class=>"btn btn-warning back"} %>
        </div>

        <div align="right" class="col-6">
          <%= f.submit :save,{:class=>"btn btn-success show_article"} %>
        </div>
      </div>
<% end %>




