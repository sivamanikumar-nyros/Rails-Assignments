<body>
  <div class="builder">
    <table id="customers">
      <tr>
        <th>
          <strong>Name:</strong>
        </th>
        <td>
          <%= @comment.name %>
        </td>
      </tr>

      <tr>
        <th>
          <strong>Comment:</strong>
        </th>
        <td>
          <%= @comment.content %>
        </td>
      </tr>
      
      <p  class="show_page-1">
        <%= link_to 'Back', comments_path,{:class=>'btn btn-warning back' } %>
      </p>
      <p class="show_page-2">
        <%= link_to 'Edit', edit_comment_path(@comment),{:class=>'btn btn-warning edit' } %>
      </p>
    </table>
  </div>
</body>