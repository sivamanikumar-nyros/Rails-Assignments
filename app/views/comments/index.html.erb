<%= link_to "Create New Comment", new_article_comment_path, {:class=>"btn btn-primary"}%>

<table id="customers" class="mt-5">
  <tr>
    <th>Article Title</th>
    <th>Name of the commentor</th>
    <th>Comment</th>
  </tr>

  
  <% @comments.each do |comment| %>
    <tr>
      <td><%= comment.article.name %></td>
      <td><%= comment.name %></td>
      <td><%= comment.content %></td>
    </tr>
  <% end %>
</table>
<%= link_to "Back" , articles_path, {:class=>"btn btn-warning back mt-5"} %>