<body>
  <div class="builder">
    <table id="customers">
      <tr>
        <th>
          <strong>Name:</strong>
        </th>
        <td>
          <%= @article.name %>
        </td>
      </tr>

      <tr>
        <th>
          <strong>Description:</strong>
        </th>
        <td>
          <%= @article.description %>
        </td>
      </tr>
      <tr>
        <th>
          <strong>Category:</strong>
        </th>
        <td>
          <%= @article.category.name %>
        </td>
      <tr>
      <tr>
        <th>
          <strong>Author_name:</strong>
        </th>
        <td>
          <%= @article.author.name %>
        </td>
      <tr>
      <p  class="show_page-1">
        <%= link_to 'Back', articles_path,{:class=>'btn btn-warning back' } %>
      </p>
      <p class="show_page-2">
        <%= link_to 'Edit', edit_article_path(@article),{:class=>'btn btn-warning edit' } %>
      </p>
    </table>
  </div>
</body>