<div class="data">
  <div class="row">
    <div class="col-md-5">
      <div align="left" class="col-lg-6 col-md-6 col-xs-6 ">
        <%= link_to "Contacts ",contacts_path,class: "navbar-brand btn btn-primary " %>
      </div>
    </div>
    <div class="col-md-4">
      <div align="left" class="col-lg-6 col-md-6 col-xs-6 ">
        <%= link_to "Posts ",posts_path,class: "navbar-brand btn btn-primary " %>
      </div>
    </div>
    <div class="col-md-3">
      <div align="right" class="col-lg-6 col-md-6 col-xs-6">
        <%= link_to "Users ",users_path,class: "navbar-brand btn btn-primary " %>
      </div>
    </div>
  </div>
</div>
<div class="container">
  <table class="table table-striped table-bordered table-hover" >
    <tr>
      <th> Id </th>
      <th> User Name</th>
      <th> Post </th>
      
    </tr>
    <% posts.each do |post,i| %>
      <tr>
        <td> <%= post.id %> </td>
        <td> <%= post.user.name %> </td>
        <td> <%= post.post %> </td>
        
      </tr>
    <% end %>
  </table>
</div>


<style type="text/css">
  .data{
    background-color: black;
    color: white;
    padding: 25px;
    margin-left: auto;
    margin-right:auto;
    text-align: center;
    width: 80%; 
  }
</style>