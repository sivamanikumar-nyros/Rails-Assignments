<div>
	<%= form_tag do %>
		<div class="Rules">
			<h2>INSTRUCTIONS</h2><hr>
			<p>You are interested for this website..please follow this steps.</p>
			<p>You dont have an account please registere here....</p>
			<p>You are having an account please login with your credentials</p>
		</div>
		<div class="admin">
			<div class="formheader">
				<% if flash[:alert] %>
					<p id="notice"><%= flash[:alert] %></p>
				<% end %>
      	<h1 class="fa fa-sign-in"><b>Customer Login</b></h1>
    	</div>
			<div class="form-group">
				<%= label_tag :name,'name'%>
				<%= text_field_tag :name,params[:name],{:class=>'form-control' } %>
			</div>
			<div class="form-group">
				<%= label_tag :password,'password'%>
				<%= password_field_tag :password,params[:password] ,{:class=>'form-control' }%>
			</div>
			<div class="form-group">
				<%= submit_tag "login" ,{:class=>'btn btn-success show_article'}%>
			</div>
		</div>
	<% end %>
</div>